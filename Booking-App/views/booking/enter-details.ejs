<%- include('../includes/head.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="title-box">
                <h4 class="title">Enter Your Details</h4>
            </div>
            <form action="/book" method="post">
                <div class="card mb-3">
                    <div class="card-body">
                        <label for="name" class="form-label">NAME</label>
                        <input type="text" id="name" name="username" class="form-control" required>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <label for="email" class="form-label">EMAIL</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <label for="phno" class="form-label">PHONE NUMBER</label>
                        <input type="tel" id="phno" name="phno" class="form-control" required>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <label for="slot-booked" class="form-label">SLOT BOOKED</label>
                        <input type="text" id="slot-booked" name="slotTime" value="<%= slotTime %>" class="form-control" disabled>
                    </div>
                </div>
                <div>
                    <input type="hidden" id="slot-booked" name="slot" value="<%= slotTime %>">
                </div>
                <button type="submit" class="btn btn-primary mt-3">Book Appointment</button>
            </form>
        </div>
    </div>
</div>
</body>
</html>